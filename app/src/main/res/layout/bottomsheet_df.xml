<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/saved_df">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawableStart="@drawable/ic_baseline_saved_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_saved_24"
            android:paddingLeft="10dp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/my_ques_df">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Questions"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawableStart="@drawable/ic_baseline_restore_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_restore_24"
            android:paddingLeft="10dp" />


    </androidx.cardview.widget.CardView>


</LinearLayout>